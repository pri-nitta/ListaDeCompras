<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        tools:context=".Activity_listaCompras">

    <TextView
            android:id="@+id/txt_content"
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            tools:text="Hamburgers"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/img_kitty1"
            android:background="@drawable/ic_kitty2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@+id/txt_content"
            app:layout_constraintBottom_toBottomOf="@+id/txt_content"
            app:layout_constraintTop_toTopOf="@+id/txt_content"/>

    <TextView
            android:id="@+id/txt_quantidade"
            tools:text="02"
            android:background="@color/coralClaro"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/txt_content"
            app:layout_constraintBottom_toBottomOf="@+id/txt_content"
            app:layout_constraintTop_toTopOf="@id/txt_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>