<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        tools:context=".activity_listaCompras">

    <TextView
            android:id="@+id/txt_content"
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            tools:text="Hamburgers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.277"
    />
    <ImageView
            android:id="@+id/img_kitty1"
            android:background="@drawable/ic_kitty2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="@+id/txt_content"
            app:layout_constraintTop_toTopOf="@+id/txt_content"
            app:layout_constraintBottom_toBottomOf="@+id/txt_content"
            app:layout_constraintEnd_toEndOf="@+id/txt_content"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintVertical_bias="0.444"/>
    <TextView
            android:id="@+id/txt_quantidade"
            android:textColor="@color/colorPrimaryDark"
            tools:text="02"
            android:textSize="25sp"
            android:padding="3dp"
            android:background="@color/coralClaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/txt_content"
            app:layout_constraintStart_toStartOf="@+id/txt_content"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintBottom_toBottomOf="@+id/txt_content"
            app:layout_constraintTop_toTopOf="@+id/txt_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>