<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".Activity_AddNew">

    <TextView
            android:id="@+id/txtActionTitle"
            android:text="@string/txtAddCompra"
            android:fontFamily="@font/aurella"
            android:textColor="@color/coralClaro"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:layout_constraintBottom_toTopOf="@+id/edtItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/edtItem"
            android:hint="@string/edtItem"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtActionTitle"/>

    <EditText
            android:id="@+id/edtQnt"
            android:hint="@string/edtQnt"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtItem"/>

    <ImageView
            android:id="@+id/img_kitty1"
            android:background="@drawable/ic_kitty2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtActionTitle"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/btnAddItem"
            android:background="@color/coralClaro"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/btnAdicionar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtQnt"/>

</androidx.constraintlayout.widget.ConstraintLayout>